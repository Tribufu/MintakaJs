{
    "compilerOptions": {
        "strict": true,
        "target": "ESNext",
        "declaration": true,
        "emitDeclarationOnly": true,
        "noImplicitAny": false,
        "moduleResolution": "Node",
        "esModuleInterop": true,
        "allowImportingTsExtensions": true,
        "resolveJsonModule": true,
        "rootDir": "src",
        "outDir": "build",
        "lib": [
            "ESNext",
            "DOM"
        ],
        "paths": {
            "@/*": [
                "./*"
            ]
        }
    },
    "include": [
        "src/**/*.ts",
    ],
    "exclude": [
        "build",
        "node_modules",
    ],
}
